{
  "name": "@herolabid/litetable-react",
  "version": "0.2.2",
  "description": "React adapter for LiteTable - Lightweight table library with hooks",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "table",
    "react",
    "hooks",
    "datatable",
    "datagrid",
    "typescript",
    "virtual-scroll",
    "export",
    "headless",
    "lightweight",
    "zero-dependencies"
  ],
  "author": "Irfan Arsyad <irfan@herostack.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/herolabid/LiteTable.js.git",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/herolabid/LiteTable.js#readme",
  "bugs": {
    "url": "https://github.com/herolabid/LiteTable.js/issues"
  },
  "funding": {
    "type": "buymeacoffee",
    "url": "https://www.buymeacoffee.com/herostack"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@herolabid/litetable-core": "^0.2.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "react": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2"
  },
  "sideEffects": false
}
