{
  "name": "@litetable/react",
  "version": "0.1.0",
  "description": "React adapter for LiteTable - Lightweight table library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "table",
    "react",
    "hooks",
    "datatable",
    "typescript",
    "virtual-scroll",
    "export"
  ],
  "author": "Irfan Arsyad <irfan@herostack.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/herolabid/LiteTable.js"
  },
  "peerDependencies": {
    "@litetable/core": "workspace:*",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "react": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2"
  },
  "sideEffects": false
}
